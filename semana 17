departamento = int (input("leitura [0: DS | 1: Marketing | 2: RH | 3: P&D]: "))
if departamento == 0: 
    print ("prefere laptops com alto desempenho")
elif departamento== 1:
    print ("prefere tablets para facilitar a apresentação e mobilidade")
elif departamento == 2: 
    print ("Recursos Humanos: prefere computadores desktop devido à sua estabilidade e custo-benefício")
elif departamento == 3: 
    print ("Pesquisa e Desenvolvimento precisa de equipamentos com especificações de última geração")

km = int(input("leitura: "))
litros = int (input("litros: "))

if km > 0 and litros > 0: 
    print (litros // km )
