#aula1#
lista = int(input ("quandas pessoas leu: "))
leitura = lista*2
site = lista*4



print ("pessoas de leu ", lista)
print ("pessoas de leitura ", leitura)
print ("pessoas de site ", site)

#aula2#
velocidade = int (input("distacia"))
tempo = int (input("tempo que digido"))

veículos1 = velocidade 
veículos2 = tempo 

if velocidade <= 300 and tempo <= 80:
    foto = (veículos1*veículos2)
    print (foto) 
        
else: 
    print ("não foi possivel fazer a conta ")        

#aula3#
metros = int (input("distacia"))
tempo = int (input("tempo percorrido"))

distancia = metros % tempo 

print ("termino é:", distancia )    

#aula4#
competidos = 33 
folhas_compradas = 100 

limite = 2*competidos 
if limite <= folhas_compradas: 
    print ("folhas  foi suficiente ")
